<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/appbackpage"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遊玩者名字"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player1"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p1edit"
        android:layout_weight="0.00"
        android:textColor="#ffffff"
        android:hint="please enter your name at p1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player2"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/p2edit"
        android:textColor="#ffffff"
        android:hint="please enter your name at p2"/>

    <Button
        android:layout_width="124dp"
        android:layout_height="75dp"
        android:text="玩家名字設定"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:layout_gravity="right" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="382dp"
                android:layout_height="147dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="196dp"
                        android:layout_height="40dp"
                        android:id="@+id/textView12"
                        android:textColor="#ffffff"
                        android:text="關卡數設定"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/levelGroup">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:id="@+id/radioButton"
                            android:checked="false"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="#010101"
                             />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:id="@+id/radioButton2"
                            android:checked="false"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="#010101" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:id="@+id/radioButton3"
                            android:checked="false"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="#010000" />

                    </RadioGroup>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="76dp"
                        android:text="關卡數設定"
                        android:id="@+id/btnLevelSetting"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遊戲所需的資料已經完成，請按下game紐"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_weight="0.18" />
</LinearLayout><!-- From: file:/Users/jason/Downloads/co-android-project-action-bar-implement/ActionTabs/app/src/main/res/layout/setting.xml -->